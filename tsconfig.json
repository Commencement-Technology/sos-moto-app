{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@images/*": ["assets/images/*"],
      "@icons/*": ["assets/icons/*"],
      "@components/*": ["components/*"],
      "@dictionaries/*": ["dictionaries/*"],
      "@screens/*": ["screens/*"],
      "@store/*": ["store/*"],
      "@translations/*": ["translations/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@logic/*": ["logic/*"],
      "@hooks/*": ["hooks/*"],
      "react": ["../node_modules/@types/react"]
    }
  },
  "exclude": [
    "__tests__/**/*-test.ts"
  ]
}
